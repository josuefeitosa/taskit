{
    "env": {
        "commonjs": true,
        "es2020": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
      "no-param-reassign": "off",
      "class-methods-use-this": "off",
      "no-await-in-loop": "off",
      "no-plusplus": "off",
      "no-restricted-syntax": "off",
      "global-require": "off"
    },
    "globals": {
      "use": true
    }
}
